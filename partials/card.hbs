{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}}">
    <a class="gh-card-link" href="{{url}}">
        <div class="gh-card-content">
            <span class="gh-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM YYYY"}}</time></span>
            <span class="gh-card-arrow"><svg width="14" height="14" viewBox="0 0 64 64"><path d="M38.828 54.828l20-20c1.562-1.562 1.562-4.095 0-5.657l-20-20c-1.562-1.562-4.095-1.562-5.657 0s-1.562 4.095 0 5.657l13.172 13.172h-38.343c-2.209 0-4 1.791-4 4s1.791 4 4 4h38.343l-13.172 13.172c-0.781 0.781-1.172 1.805-1.172 2.828s0.391 2.047 1.172 2.828c1.562 1.562 4.095 1.562 5.657 0z"></path></svg></span>
            <span class="gh-card-title">
              <span class="gh-visible-title">{{title}}</span>
              <span class="gh-hidden-title">{{title}}</span>
            </span>
            <span class="gh-card-reading-time"> {{reading_time}}</span>
        </div>
    </a>
</article>
